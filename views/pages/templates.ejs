<%- include('../include/user-header') %>
    <div style="min-height: 400px;" class="p-1 bg-white">
        <div class="d-flex justify-content-center">
            <h2>Qurik Templates</h2>

        </div>
        <div class="templates my-2 " style="width: 100%;">
            <% data.forEach((data)=>{%>


                <!-- <a href="/canvas?id=<%= data.template_id %> " target="_blank"> -->
                <div class="hover-opactiy d-flex  justify-content-center flex-direction-column" style="width: 200px;">
                    <input type="hidden" id="display-template-id" value="<%= data.template_id %>">


                    <img src="images/ci/<%= data.canvas_image %>" width="170" class="show-template-details" alt="">
                    <h4 class="text text-dark show-template-details">
                        <%= data.template_name %>
                    </h4>
                    <p style="display:none">
                        <%= data.template_description %>
                    </p>


                    <!-- </a> -->
                </div>

                <% }) %>

                    <!-- modal activation -->
                    <div class="modal-activation">
                        <div class="modal-header">
                            <div>
                                <span class="modal-title">title</span>
                            </div>
                            <div>
                                <div class="close">Close</div>
                            </div>


                        </div>
                        <hr>
                        <div class="modal-content">

                            <div class="content">

                                <div class="img-container">
                                    <img class="modal-image" width="100%" src="" alt="">

                                </div>

                                <div class="details-container">
                                    <input type="hidden" id="template-id">
                                    <span class="modal-description"></span>
                                    <span>

                                    </span>
                                    <h3></h3>
                                    <p></p>
                                    <div class="d-flex gap-10  form">
                                        <input type="text" id="code">
                                        <div class="btn btn-sm btn-success" id="sumbit-code-btn">Submit</div>
                                    </div>

                                </div>


                            </div>
                        </div>
                    </div>
        </div>

    </div>


    <%- include('../include/footer') %>