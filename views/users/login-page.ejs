<%- include('../include/user-header') %>

  <div class="bg-white login-page">

    <div class="d-flex justify-content-center flex-direction-column form-container bg-white" style="min-height:420px">
      <img src="images/quirk-logo.png" width="45" alt="">
      <h4 class="text text-dark">Quirktool</h4>


      <div style="height: 10px">
        <% if(locals.errors){ %>

          <div class="text text-center text-danger">
            <small>
              <%= errors %>
            </small>
          </div>

          <% } %>
      </div>

      <form action="/login" method="POST" class="login-form form">

        <div class="d-flex gap-20 justify-content-between flex-direction-column align-items-start form my-1">
          <input style="width:300px" name="user_email" type="text" placeholder="Email" autocomplete="off"
            value="<%= locals.users_data && users_data.length ? users_data[0].user_email : '' %>" />

          <input style="width:300px" name="user_password" autocomplete type="password" placeholder="Password"
            id="login-password" />


          <div class="d-flex align-items-center gap-10 check-password-container"
            style="padding-top:3px; user-select: none;gap: 5px;">
            <input type="checkbox" id="check-password-login-input" />

            <label for="check-password-login-input" class="pad-x"><small>
                Show
                Password</small>
            </label>
          </div>
        </div>
        <div class="d-flex justify-content-between align-items-end">
          <div>
            <button id="login-button" class="btn btn-sm btn-secondary text text-white">Sign In</button>

          </div>

          <div class="d-flex justify-content-end">
            <small>
              <a href="/register-page" class="text text-dark white-hover">
                &nbsp;Sign up for Quirk? &nbsp;</a></small>
          </div>
        </div>
      </form>
    </div>
  </div>
  <%- include('../include/loader') %>

    <%- include('../include/footer') %>