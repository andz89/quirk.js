<%- include('../include/header') %>

  <div class="my-2">
    <div class="d-flex justify-content-center flex-direction-column form-container py-2 bg-white">
      <h1 class="text text-primary">Quirk</h1>
      <div style="height: 10px">
        <% if(locals.errors){ %>

          <div class="text text-center text-danger">
            <small>
              <%= errors %>
            </small>
          </div>

          <% } %>
      </div>
      <% if(locals.success_message) { %>
        <%= success_message %>
          <%} %>
            <form action="/login" method="POST" class="login-form form">
              <div class="d-flex gap-20 justify-content-between flex-direction-column align-items-start form my-1">
                <input name="user_email" type="text" placeholder="Email" autocomplete="off"
                  value="<%= locals.user_data_input  ? user_data_input[0].user_email : '' %>" />

                <input name="user_password" type="password" placeholder="Password" id="login-password" />
                <div class="d-flex align-items-center check-password-container">
                  <input type="checkbox" id="check-password-login-input" />

                  <label for="check-password-login-input" class="pad-x"><small> Show Password</small>
                  </label>
                </div>
              </div>
              <div class="d-flex justify-content-between align-items-end">
                <div>
                  <button class="btn btn-md btn-success">Sign In</button>
                </div>

                <div class="d-flex justify-content-end">
                  <small>
                    <a href="/register_page" class="text text-dark white-hover">
                      &nbsp;Sign up for Quirk? &nbsp;</a></small>
                </div>
              </div>
            </form>
    </div>
  </div>
  <%- include('../include/footer') %>